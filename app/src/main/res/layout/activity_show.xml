<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="carton.fmy.com.yuanmanhua.activity.ShowActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9000"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:id="@+id/tv_sequence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第01话"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_sequence_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="1"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_sequence_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/99"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#a000">

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/discreteSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dsb_indicatorColor="#BBFFFF"
            app:dsb_indicatorTextAppearance="@color/cardview_dark_background"
            app:dsb_max="20"
            app:dsb_progressColor="#00CED1"
            app:dsb_rippleColor="#D1EEEE"
            app:dsb_trackColor="#66CDAA"
            app:dsb_value="5" />
    </FrameLayout>

</RelativeLayout>
